doctype
html
  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      h1 Venta De Pasajes
    .container
      .main-content
        block content
            script(rel='js',type='text/javascript',src='/js/graphlib.min.js')
            script(rel='js',type='text/javascript',src='/js/travels-functions.js')
            script(rel='js',type='text/javascript',src='/js/graph-operations.js')
            script(rel='js',type='text/javascript',src='/js/view-operations.js')
            t2 Origen: &nbsp;
            select#origin
              each city, i in ciudades
                option(value=i) #{city} 
            &nbsp; &nbsp;
            t2 Destino: &nbsp;
            select#destiny
              each city, i in ciudades
                option(value=i) #{city}
            &nbsp;
            button(onclick="searchTravels()") Buscar
            br
            br
            #travelsTable
      .sidebar
        block sidebar
    footer
      p Running on node with Express, Jade and Stylus
